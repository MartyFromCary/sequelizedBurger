<div class="container">

    <div class="jumbotron">
        <h1 class="text-center">
            <strong>Burger Town</strong>
        </h1>
    </div>

    <div class="row">
        <div class="col-lg-12">

            <div class="panel panel-success">
                <div class="panel-heading">
                    <h2 class="panel-title text-center">Choose a Customer</h2>
                </div>
                {{param}}
                <div class="panel-body">
                    <ul id="burger_id" data-burger_id="{{burger_id}}">
                        {{#each eaters}}
                        <li>
                            <p>
                                <button data-id="{{this.id}}" class="devour">{{this.name}}</button>
                            </p>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>

    </div>

    <div class="panel panel-warning ">
        <div class="panel-heading ">
            <h3 class="panel-title text-center ">Create A New Customer</h3>
        </div>
        <div class="panel-body text-center ">
            <input type="text" class="new_customer">
            <button type="submit " id="new_customer">Add</button>
        </div>
    </div>

</div>